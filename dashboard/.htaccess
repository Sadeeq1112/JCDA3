RewriteEngine On
RewriteBase /

# Redirect API requests to the appropriate PHP files
RewriteRule ^api/dashboard$ api/dashboard.php [L]
RewriteRule ^api/user/profile$ api/user_profile.php [L]
RewriteRule ^api/payments$ api/payments.php [L]
RewriteRule ^api/payments/verify$ api/verify_payment.php [L]
RewriteRule ^api/payments/([0-9]+)/receipt$ api/payment_receipt.php?id=$1 [L]
RewriteRule ^api/user/membership-card$ api/membership_card.php [L]
RewriteRule ^api/logout$ api/logout.php [L]

# For any other requests, serve the index.html file
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]